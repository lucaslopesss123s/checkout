# Database
DATABASE_URL="postgresql://username:password@localhost:5432/checkout?schema=public"

# NextAuth.js
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="https://checkout.pesquisaencomenda.online"

# Application URLs (obrigatório para produção)
NEXT_PUBLIC_APP_URL="https://checkout.pesquisaencomenda.online"

# Firebase (optional - for authentication)
FIREBASE_PROJECT_ID="your-project-id"
FIREBASE_CLIENT_EMAIL="your-service-account-email"
FIREBASE_PRIVATE_KEY="your-private-key"

# PostgreSQL (for docker-compose)
POSTGRES_DB="checkout"
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="your-postgres-password"

# Application
NODE_ENV="production"
PORT="3000"

# Cloudflare (para gerenciamento de domínios e SSL)
CLOUDFLARE_API_TOKEN="your-cloudflare-api-token"
CLOUDFLARE_ZONE_ID="your-cloudflare-zone-id"
CLOUDFLARE_EMAIL="your-cloudflare-email"

# SSL Configuration
SSL_EMAIL="your-email@domain.com"
LETSENCRYPT_EMAIL="your-email@domain.com"

# Server IP (para configuração DNS)
CHECKOUT_SERVER_IP="your-server-ip-address"

# JWT Secret (para autenticação)
JWT_SECRET="your-jwt-secret-key"